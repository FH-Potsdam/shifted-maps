extends ./base.jade

block content
    .screencast
        video.video-js.vjs-cover(width="auto" height="auto" autoplay="true" preload="auto" loop)
            source(src="/videos/screencast-hd.mp4" type="video/mp4")
            source(src="/videos/screencast-hd.webm" type="video/webm")

    .hero
        h1 Shifted Maps
        p.lede Visualizing personal Movement through Map Networks

        p.hero__highlight
            a.hero__go(href="/map" + (exhibition ? "?exhibition" : ""))
                | Test the Demo
                i.icon.icon--go
            a.hero__go(href="/auth" + (exhibition ? "?redirect=/map?exhibition" : ""))
                | Explore your own Data
                i.icon.icon--go

        .hero__bottom
            unless exhibition
                .layout.hero__section
                    .layout__item.u-1-of-3
                        a.hero__download(href="/downloads/ShiftedMaps_Paper_V2.pdf")
                            i.icon.icon--go
                            | Paper
                            em 874 KB
                    .layout__item.u-1-of-3
                        a.hero__download(href="/downloads/ShiftedMaps_Plakat.pdf")
                            i.icon.icon--go
                            | Poster
                            em 4,8 MB

            p.hero__credits.hero__section
                | Shifted Maps is a student research project by&nbsp;
                a(href="http://www.lennerd.com") Lennart Hildebrandt
                | &nbsp;and&nbsp;
                a(href="http://heikeotten.de/") Heike Otten
                | &nbsp;at the Urban Complexity Lab, University of Applied Sciences Potsdam.

            .layout.hero__section
                .layout__item.u-1-of-5
                    if exhibition
                        img.hero__logo(src="/images/fhp-logo.png", alt="Logo of the University of Applied Science Potsdam")
                    else
                        a(href="http://www.fh-potsdam.de")
                            img.hero__logo(src="/images/fhp-logo.png", alt="Logo of the University of Applied Science Potsdam")
                .layout__item.u-1-of-2
                    if exhibition
                        img.hero__logo(src="/images/uclab-logo.png", alt="Logo of the Urban Complexity Lab")
                    else
                        a(href="http://uclab.fh-potsdam.de")
                            img.hero__logo(src="/images/uclab-logo.png", alt="Logo of the Urban Complexity Lab")
                .layout__item.u-1-of-4
                    if exhibition
                        img.hero__logo(src="/images/here-logo.png", alt="Logo of the HERE")
                    else
                        a(href="http://here.com")
                            img.hero__logo(src="/images/here-logo.png", alt="Logo of the HERE")

prepend styles
    link(href="/components/video.js/dist/video-js.min.css" rel="stylesheet")

append scripts
    script(src="/components/video.js/dist/video.min.js")