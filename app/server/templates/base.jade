doctype html
html(lang="en")
    head
        title Shifted Maps
        meta(name='description', content='Shifted Maps')
        meta(name='author', content='Lennart Hildebrandt & Heike Otten (University of Applied Sciences Potsdam)')
        meta(name='viewport', content='width=device-width, user-scalable=no')

        link(href="/images/favicon.ico", rel="shortcut icon")

        block styles
            link(href='/styles/desktop.css', rel='stylesheet')
    body
        block content

        block scripts
            script.
                var _paq = _paq || [];
                _paq.push(['trackPageView']);
                _paq.push(['enableLinkTracking']);
                (function () {
                    var u="//piwik.lennerd.com/";
                    _paq.push(['setTrackerUrl', u+'piwik.php']);
                    _paq.push(['setSiteId', 1]);
                    var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
                    g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'piwik.js'; s.parentNode.insertBefore(g,s);
                })();
            script(src='https://use.typekit.net/hil0jky.js')
            script="try{Typekit.load({async: true});}catch(e){}"